<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="MissingDefaultResource">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#009688" /> <!-- Button background color when pressed -->
            <corners android:radius="8dp" /> <!-- Button corner radius -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80D67D" /> <!-- Default button background color -->
            <corners android:radius="8dp" /> <!-- Button corner radius -->
        </shape>
    </item>
</selector>